<!DOCTYPE html>
<html>
  <head>

 <link href="https://cdnjs.cloudflare.com/ajax/libs/c3/0.4.11/c3.min.css" rel="stylesheet" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.5/d3.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/c3/0.4.11/c3.js"></script>

</head>
<body>
<p style="font-size: 22px;">
   график
  </p>

  <div id="chart1"></div>

    <script type="text/javascript"> 

    
    var chart1 = c3.generate({
    bindto: '#chart1',

    data:{ 
        url: '/meters/meter_data.json',
        mimeType: 'json',
        x: 'meter_date',
        xFormat: '%Y-%m-%dT%H:%M:%S.%LZ',
        type: 'line',
        
        keys: {  // keys of json data
            
                value: ['meter_date','meter_value']
            },

            
        },
    axis: {
        x: {
            type: 'timeseries',
            
            tick: {
                //x_format: '%e %b %y' //вместо format нужно x_format
                format: '%H:%M:%S',
                count:5   // Set number of values on Axis X ( just for visualisation)
                 
            }
        }
        
    },
    zoom: {
        enabled: true
    }
    
}); 
setInterval(function () {
$.getJSON("/meters/meter_data.json", function(externaldata) {
   var length1 = externaldata.length;
   var last = externaldata[length1 - 1];

   console.log(last);
    chart1.flow({
        
        json: [last],
        
        keys: {  // keys of json data
            
                value: ['meter_date','meter_value']
            },

        //length: 1    
        
        
        
       
    });
});
}, 15000); 

   
    </script>


  
  
    <% @meters.each do |m| %>
      
        <p class="text-center">
          <%=  m.meter_value.to_s %>
        </p>
    <% end %>
      
</body>
</html>
